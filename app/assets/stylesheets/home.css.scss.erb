.foto_slide {
  background-color: green;
  float: left;
  margin: 10px;
  background-color: green;
}

.eventos_normal, .lugares_normal {
  .thumbnail {
    height: 200px;

    .nombre {
      font-weight: bold;
      text-align: center;
    }

    .fecha {
      font-style: italic;
      text-align: center;
    }

    .foto {
      text-align: center;
    }

    .costo {
      font-weight: bold;
    }

    .lugar {
    }

    .ver_mas {
      text-align: center;
    }

  }
}


.eventos_thumbnail, .lugares_thumbnail {
  .thumbnail {
    height: 230px;

    .nombre {
      font-weight: bold;
    }

    .fecha {
      font-style: italic;
    }

    .foto {
      float: left;
      padding: 3px;
      margin: 3px;
    }

    .costo {
      font-weight: bold;
    }

    .lugar {
    }

    .ver_mas {
    }

  }
}

.single {
}

.multiple {
  background-color:#cccccc;
  background-image: url(<%= asset_path 'pile_of_old_photographs_md_wm.jpg' %>);
  background-repeat: repeat-x;
  height: 62px;
  width: 80px;
}

#calendar {
  img {
    margin-top: 5px;
    margin-left: 10px;
    width: 47px;
  }

  td {
    height: 100px;
  }

}

.calendar_nav {
  text-align: center;
  font-size: 2em;
  font-weight: bold;
  padding-bottom: 0.8em;

  .nombre_mes {
    display: inline;
  }
}

.nombre_mes {
  text-align: center;
}
