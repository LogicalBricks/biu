= form_for @lugar do |f|
  -if @lugar.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lugar.errors.count, "error")} prohibited this lugar from being saved:"
      %ul
        - @lugar.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :resumen
    = f.text_area :resumen
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .actions
    = f.submit 'Save'
