= form_for (@lugar, html: { class: 'form-horizontal'}) do |f|
  = render 'error_messages', :target => @lugar
  %fieldset
    .control-group
      = f.label :nombre
      .controls
        = f.text_field :nombre
    .control-group
      = f.label :resumen
      .controls
        = f.text_area :resumen
    .control-group
      = f.label :descripcion
      .controls
        = f.text_area :descripcion

    = render 'localizacion/localizacion_fields', :f => f

    = render 'fotografias/fotografias_fields', :f => f
  .form-actions
    = f.submit 'Guardar', class: 'btn btn-primary'

= gmaps4rails(@marker)
= yield :scripts
