.row.page-header
  .span12
    %h1
      = @lugar.nombre
.row
  .span7
    #FotosCarousel.carousel.slide
      .carousel-inner
        - first_element = true
        - @lugar.fotografias.each do |f|
          = content_tag(:div, class: (first_element) ? 'item active' : 'item') do
            = image_tag(f.imagen_url(:medium).to_s) 
            .carousel-caption
              %h4
                = f.titulo
              %p
                = f.descripcion
            - first_element = false
      = link_to '‹', '#FotosCarousel', class: 'carousel-control left', data: { slide: 'prev'}
      = link_to '›', '#FotosCarousel', class: 'carousel-control right', data: { slide: 'next'}
  .span5 
    = link_to 'Ubicacion', '#ubicacion' 
    \|
    = link_to 'Servicios', '#servicios'
    %p.lugar_resumen
      %strong Resumen:
      = @lugar.resumen
    %p.lugar_descripcion
      %strong Descripción:
      = @lugar.descripcion
    
#ubicacion.row
  = gmaps(@marker)

.row
  %br

#servicios.row
  .span3
    %h5 Hoteles
    %hr
    %ul
      - @hoteles.each do |hotel|
        %li
          %b= hotel.nombre
          %i= hotel.telefono
          %br

  .span3
    %h5 Restaurantes
    %hr
    %ul
      - @hoteles.each do |hotel|
        %li
          %b= hotel.nombre
          %i= hotel.telefono
          %br

  .span3
    %h5 Transporte
    %hr
    %ul
      - @hoteles.each do |hotel|
        %li
          %b= hotel.nombre
          %i= hotel.telefono
          %br

  .span3
    %h5 Servicios
    %hr
    %ul
      - @hoteles.each do |hotel|
        %li
          %b= hotel.nombre
          %i= hotel.telefono
          %br

= yield :scripts
