.span1= link_to 'Mes anterior', '/calendario/' + @last_month
.span9
  #calendar
    = calendar_for(@eventos, :year => @year, :month => @month, html: { class: 'table table-bordered'}) do |t|
      = t.head('lunes', 'martes', 'miercoles', 'jueves', 'viernes', 'sÃ¡bado', 'domingo')
      = t.day(day_method: :fecha_y_hora) do |dia, eventos|
        = dia.day
        %br
        = content_tag :div, class: (eventos.size > 1 ? 'multiple' : 'single') do
          - nombres = eventos.collect(&:nombre).to_sentence
          - evento = eventos.first
          = link_to image_tag(evento.fotografias.first.imagen_url(:thumb).to_s, title: nombres, data: {placement: 'bottom'}), evento_path(evento) if eventos.size > 0

.span1= link_to 'Mes siguiente', '/calendario/' + @next_month
