= form_for @evento do |f|
  -if @evento.errors.any?
    #error_explanation
      %h2= "#{pluralize(@evento.errors.count, "error")} prohibited this evento from being saved:"
      %ul
        - @evento.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :resumen
    = f.text_area :resumen
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .field
    = f.label :fecha_y_hora
    = f.datetime_select :fecha_y_hora
  .field
    = f.label :costo
    = f.text_field :costo
  .actions
    = f.submit 'Save'
